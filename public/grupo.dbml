Table grupo {
    id int [pk, increment] // Primary key
    clave_grupo varchar(20) 
    nombre_grupo varchar(100) 
    tutores_id int // Relación con el tutor responsable
    periodo_id int // Relación con el periodo
    carrera varchar(100) // Carrera a la que pertenece
    semestre int // Nivel académico del grupo
    aula varchar(50) // Aula asignada
    horario varchar(100) // Ejemplo: "Lun-Mie-Vie 8:00 - 10:00"
    cupo int // Número máximo de alumnos
    modalidad enum('presencial', 'virtual', 'mixta')
    turno enum('matutino', 'vespertino', 'nocturno') 
    observaciones text // Comentarios adicionales
    created_at timestamp
    updated_at timestamp
}
